                        "name":"LbSku",
                        "type":"Microsoft.Common.DropDown",
                        "label":"SKU",
                        "defaultValue":"Standard",
                        "toolTip":"LB SKU",
                        "constraints":{ 
                            "allowedValues":[
                                {
                                    "label":"Standard",
                                    "value":"Standard" 
