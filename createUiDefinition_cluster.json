                    },
                    {
                        "name":"DpsPackage",
                        "type":"Microsoft.Common.DropDown",
                        "label":"DPS Package",
                        "defaultValue":"Throughput",
                        "toolTip":"DPS Package",
                        "constraints":{ 
                            "allowedValues":[
                                {  
                                    "label":"Throughput",
                                    "value":"Throughput"
                                },     
                                {  
                                    "label":"Secure",
                                    "value":"Secure"
                                },
                                {  
                                    "label":"Perform",
                                    "value":"Perform"
                                }                                                                                           
